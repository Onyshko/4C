        <StackPanel Orientation="Horizontal">
            <Button Content="Home" Style="{StaticResource NavBarButton}"/>
            <Button Content="Exchanges" Style="{StaticResource NavBarButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
