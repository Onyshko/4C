<Window x:Class="_4C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4C"
        xmlns:userControls="clr-namespace:_4C.MVVM.View.UserControls"
        mc:Ignorable="d"
        Title="4C" Height="450" Width="800">
    <Grid Background="LightBlue">

        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Navigation Bar-->
        <userControls:NavigationBar/>

        <Frame Grid.Row="1" x:Name="MainContentFrame" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
